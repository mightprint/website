---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  category: "flexible-packaging" | "paper-box" | "labels";
  products: any[];
}

const { category, products } = Astro.props;

const categoryTitles = {
  "flexible-packaging": "Flexible Packaging",
  "paper-box": "Paper Box Packaging",
  "labels": "Custom Labels & Stickers"
};

const pageTitle = categoryTitles[category] ?? "Packaging Products";
---

<BaseLayout
  title={`${pageTitle} | Might Print`}
  description={`Explore our ${pageTitle} solutions for global brands.`}
>

  <section class="section">
    <div class="container">

      <h1 class="section-title">{pageTitle}</h1>

      <div class="category-grid">
        {products.map((product) => (
          <a href={`/products/${product.slug}`} class="product-card">
            <h3>{product.data.title}</h3>
            <p>{product.data.description}</p>
          </a>
        ))}
      </div>

    </div>
  </section>

</BaseLayout>

<style>
.section {
  padding: 100px 0;
}

.section-title {
  text-align: center;
  margin-bottom: 60px;
  font-size: 34px;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 40px;
}

.product-card {
  display: block;
  padding: 30px;
  background: #ffffff;
  border-radius: 12px;
  text-decoration: none;
  color: inherit;
  box-shadow: 0 15px 30px rgba(0,0,0,0.06);
  transition: transform 0.3s ease;
}

.product-card:hover {
  transform: translateY(-6px);
}

.product-card h3 {
  margin-bottom: 10px;
}
</style>
