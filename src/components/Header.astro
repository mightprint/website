---
const navLinks = [
  { name: "Home", href: "/" },
  { name: "Products", href: "/products", mega: true },
  { name: "Solutions", href: "/packaging-system" },
  { name: "Knowledge", href: "/knowledge" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];

const currentPath = Astro.url.pathname;

function isActive(href: string) {
  if (href === "/") return currentPath === "/";
  return currentPath === href || currentPath.startsWith(href + "/");
}
---

<header class="site-header" id="site-header">
  <div class="container header-inner">
    <a href="/" class="logo">
      <img src="/logo.svg" alt="Might Print" />
    </a>

    <nav class="main-nav">
      <ul>
        {
          navLinks.map((link) => (
            <li class={link.mega ? "has-mega" : ""}>
              <a
                href={link.href}
                class={`${isActive(link.href) ? "active" : ""} ${link.href === "/" ? "home-link" : ""}`.trim()}
              >
                {link.name}
              </a>

              {link.mega && (
                <div class="mega-menu">
                  <div class="mega-top">
                    <div>
                      <h3>Explore Our Packaging Products</h3>
                      <p>Premium custom packaging solutions.</p>
                    </div>
                    <a href="/products" class="view-all">
                      View All Products ->
                    </a>
                  </div>

                  <div class="mega-grid">
                    <a href="/products/stand-up-pouch" class="product-card">
                      <img src="/images/standup.jpg" alt="Stand Up Pouch" />
                      <h4>Stand Up Pouch</h4>
                      <p>Resealable & premium finish.</p>
                    </a>

                    <a href="/products/flat-bottom-pouch" class="product-card">
                      <img src="/images/flatbottom.jpg" alt="Flat Bottom Pouch" />
                      <h4>Flat Bottom Pouch</h4>
                      <p>Maximum shelf presence.</p>
                    </a>

                    <a href="/products/mylar-bag" class="product-card">
                      <img src="/images/mylar.jpg" alt="Mylar Bag" />
                      <h4>Mylar Bag</h4>
                      <p>High-barrier packaging.</p>
                    </a>

                    <a href="/products/display-boxes" class="product-card">
                      <img src="/images/displaybox.jpg" alt="Display Box" />
                      <h4>Display Box</h4>
                      <p>Custom printed cartons.</p>
                    </a>
                  </div>
                </div>
              )}
            </li>
          ))
        }
      </ul>
    </nav>

    <button class="menu-toggle" id="menu-toggle" aria-label="Open menu">&#9776;</button>

    <a href="/contact#inquiry" class="cta-btn">Get a Quote</a>
  </div>

  <div class="mobile-menu" id="mobile-menu">
    <div class="mobile-inner">
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="/packaging-system">Solutions</a>
      <a href="/knowledge">Knowledge</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
    </div>
  </div>
</header>

<style>
.site-header {
  position: sticky;
  top: 0;
  z-index: 1000;
  transition: all 0.35s ease;
  background: #fff;
}

.header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 56px;
  transition: height 0.35s ease;
  position: relative;
  overflow: visible;
}

.logo {
  height: 56px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.logo img {
  display: block;
  height: 34px;
  width: auto;
}

.site-header.scrolled {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
}

.main-nav {
  position: static;
  height: 100%;
}

.main-nav ul {
  display: flex;
  gap: 0;
  list-style: none;
  margin: 0;
  padding: 0;
  height: 100%;
}

.main-nav li {
  display: flex;
  align-items: stretch;
}

.main-nav li.has-mega {
  position: static;
}

.main-nav > ul > li > a {
  text-decoration: none;
  color: #222;
  font-size: 15px;
  font-weight: 400;
  padding: 0 16px;
  height: 56px;
  display: inline-flex;
  align-items: center;
  transition: background-color 0.2s ease;
  border-radius: 0;
}

/* remove underline effect entirely */
.main-nav > ul > li > a::after {
  content: none;
}

/* hover, focus, and active all use the same block highlight */
.main-nav > ul > li:hover > a,
.main-nav > ul > li > a:focus-visible,
.main-nav > ul > li > a.active,
.main-nav > ul > li.has-mega:hover > a,
.main-nav > ul > li.has-mega:focus-within > a {
  background: #e4f0ff;
  color: #222;
}

/* Home is not highlighted when it's only route-active on homepage */
.main-nav > ul > li > a.home-link.active {
  background: transparent;
  color: #222;
}

/* Home still gets highlight on interaction */
.main-nav > ul > li:hover > a.home-link,
.main-nav > ul > li > a.home-link:focus-visible,
.main-nav > ul > li > a.home-link:active {
  background: #e4f0ff;
  color: #222;
}

.mega-menu {
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  width: min(1200px, calc(100vw - 32px));
  max-height: min(78vh, 760px);
  overflow: auto;
  padding: 44px 36px 34px;
  border-radius: 0 0 20px 20px;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(18px);
  box-shadow: 0 30px 80px rgba(0, 0, 0, 0.12);
  opacity: 0;
  visibility: hidden;
  z-index: 1200;
  transition: opacity 0.2s ease, visibility 0.2s ease;
}

/* bridge strip to eliminate hover gap */
.mega-menu::before {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  top: -12px;
  height: 12px;
  background: transparent;
}

.has-mega:hover .mega-menu,
.has-mega:focus-within .mega-menu {
  opacity: 1;
  visibility: visible;
}

.mega-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40px;
}

.mega-top h3 {
  font-size: 20px;
  margin-bottom: 8px;
}

.mega-top p {
  color: #666;
  font-size: 15px;
  max-width: 520px;
}

.view-all {
  font-weight: 500;
  text-decoration: none;
  color: #0071e3;
  transition: opacity 0.3s ease;
  white-space: nowrap;
}

.view-all:hover {
  opacity: 0.7;
}

.mega-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32px;
  margin-top: 40px;
}

.product-card {
  background: #fff;
  border-radius: 18px;
  overflow: hidden;
  text-decoration: none;
  color: #222;
  border: 1px solid #eee;
  opacity: 0;
  transform: translateY(10px);
  transition: all 0.3s ease;
}

.has-mega:hover .product-card,
.has-mega:focus-within .product-card {
  opacity: 1;
  transform: translateY(0);
}

.has-mega:hover .product-card:nth-child(1),
.has-mega:focus-within .product-card:nth-child(1) { transition-delay: 0.05s; }
.has-mega:hover .product-card:nth-child(2),
.has-mega:focus-within .product-card:nth-child(2) { transition-delay: 0.1s; }
.has-mega:hover .product-card:nth-child(3),
.has-mega:focus-within .product-card:nth-child(3) { transition-delay: 0.15s; }
.has-mega:hover .product-card:nth-child(4),
.has-mega:focus-within .product-card:nth-child(4) { transition-delay: 0.2s; }

.product-card img {
  width: 100%;
  height: 170px;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.product-card h4 {
  font-size: 16px;
  margin: 16px 16px 6px;
}

.product-card p {
  font-size: 14px;
  color: #666;
  margin: 0 16px 16px;
  line-height: 1.5;
}

.product-card:hover img {
  transform: scale(1.06);
}

.product-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 25px 50px rgba(0, 0, 0, 0.08);
  border-color: transparent;
}

.cta-btn {
  background: #0071e3;
  color: #fff;
  padding: 8px 16px;
  border-radius: 50px;
  font-size: 14px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: 0 6px 18px rgba(0, 119, 255, 0.25);
}

.cta-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 28px rgba(0, 119, 255, 0.35);
}

.menu-toggle {
  display: none;
  background: none;
  border: none;
  font-size: 24px;
}

.mobile-menu {
  position: fixed;
  top: 0;
  right: -100%;
  width: 85%;
  height: 100vh;
  background: #fff;
  transition: right 0.4s ease;
  z-index: 2000;
  padding: 40px;
}

.mobile-menu.open {
  right: 0;
}

@media (max-width: 992px) {
  .main-nav {
    display: none;
  }

  .menu-toggle {
    display: block;
  }

  .header-inner {
    height: 64px;
  }

  .logo img {
    height: 36px;
  }
}
</style>

<script>
  const header = document.getElementById("site-header");
  const toggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  window.addEventListener(
    "scroll",
    () => {
      if (!header) return;
      header.classList.toggle("scrolled", window.scrollY > 40);
    },
    { passive: true }
  );

  if (toggle && mobileMenu) {
    toggle.addEventListener("click", () => {
      mobileMenu.classList.toggle("open");
    });
  }
</script>
